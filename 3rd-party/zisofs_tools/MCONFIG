# Prefixes
prefix      = /usr
exec_prefix = ${prefix}

# Directory for user binaries
bindir  = ${exec_prefix}/bin

# Man page tree
mandir  = ${prefix}/man

# System binaries
sbindir = ${exec_prefix}/sbin

# Install into chroot area
# Useful when making rpms and similar
INSTALLROOT = 

# Install program
INSTALL         = /usr/bin/install -c
INSTALL_PROGRAM = ${INSTALL}
INSTALL_DATA    = ${INSTALL} -m 644

# Compiler and compiler flags
CC      = gcc
CFLAGS  = -g -Wall -W -Wpointer-arith -Wbad-function-cast -Wstrict-prototypes -Wmissing-prototypes -Wmissing-declarations -Wnested-externs -Winline -Wshadow -Wcast-align -pipe

# Link flags
LDFLAGS = 

# Libraries
LIBS    = -lz 

# Additional library we need to build
LIBOBJS	= 

# ar and ranlib (for making libraries)
AR	= ar cq
RANLIB	= ranlib
